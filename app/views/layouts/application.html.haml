!!!
%html
  %head
    = javascript_include_tag :application
    = stylesheet_link_tag :application
    = csrf_meta_tags

%body
  .topbar
    .topbar-inner
      .container-fluid
        = link_to "Do it later", root_path, :class => "brand"
        %ul.nav
          - if user_signed_in?
            %li
              = link_to "Calendar", "/#!/"
            %li.dropdown
              = link_to "Add", "#", :class => "dropdown-toggle"
              %ul.dropdown-menu
                %li
                  = link_to "Goal", "#!/form"
                %li
                  = link_to "Role", "#!/role"
            %li
              = link_to "Settings", "#"
        %p.pull-right
          - if user_signed_in?
            Logged in as
            = link_to current_user.email, user_path
            = "/"
            = link_to "Exit", destroy_user_session_path, :method => :delete
          - else
            = link_to "Sign in", new_user_session_path

  .container-fluid
    - if user_signed_in?
      .sidebar
        = render :partial => "main/weekly_roles_goals"
    .content
      = yield
      %footer